-- Place this in a LocalScript within StarterPlayer > StarterPlayerScripts

local player = game.Players.LocalPlayer
local camera = game.Workspace.CurrentCamera
local targetPlayer = game.Players:WaitForChild("TargetPlayerName") -- Replace with the player's name you want to lock on to

-- Make sure the player exists in the game
if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("Head") then
    local targetHead = targetPlayer.Character.Head

    -- Function to update the camera position
    local function lockCamera()
        -- Set the camera to follow the target's head
        camera.CFrame = CFrame.new(camera.CFrame.Position, targetHead.Position)
    end

    -- Run the function every frame to keep updating
    game:GetService("RunService").RenderStepped:Connect(lockCamera)
else
    warn("Target player or their head not found!")
end
